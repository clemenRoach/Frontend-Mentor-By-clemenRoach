*{
padding:0;
margin:0;
box-style:border-box;
}
body{
background-color:#D5E1EF;
}
.container{
display:flex;
align-items:center;
width:100%;
min-height:98vh;
}

.card{
text-align:center;
background-color:white;
width:230px;
height:350px;
padding:1em;
border-radius:1em;
margin:0 auto;
}

.card h1{
font-size:1.3em;
margin-top:1em;
}
.card p{
font-size:0.9em;
margin-top:1em;
}
.card img{
width:230px;
height:220px;
border-radius:1em;
}

.footer{
	display:flex;
}